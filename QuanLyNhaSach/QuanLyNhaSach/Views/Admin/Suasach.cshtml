@using QuanLyNhaSach.Models
@model SACH

@{
    ViewBag.Title = "Suasach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN SÁCH</h2>

@using (Html.BeginForm("Suasach", "Admin", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "formUpdate" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Masach)

        <div class="form-group">
            @Html.LabelFor(model => model.Masach, new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px">@ViewBag.Masach</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tensach, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Tensach" name="Tensach" type="text" value="@Model.Tensach">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Donvitinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Donvitinh" name="Donvitinh" type="text" value="@Model.Donvitinh">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Dongia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Dongia" name="Dongia" type="text" value="@Model.Dongia">
            </div>
        </div>

        <div class="form-group">
           @Html.LabelFor(model => model.Mota, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Mota" name="Mota" type="text" value="@Model.Mota">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Hinhminhhoa">Hình minh hoạ</label>
            <div class="col-md-10">Chọn ảnh mới
                <input type="file" name="fileupload"/>
                <img src="@Url.Content("~/Hinhsanpham/" + Model.Hinhminhhoa)" width="120px" /> (Ảnh hiện tại)
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaCD, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaCD")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaNXB, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaNXB")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ngaycapnhat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-date="The field Ngaycapnhat must be a date." id="Ngaycapnhat" name="Ngaycapnhat" type="datetime" value="@Model.Ngaycapnhat">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Soluongban, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-number="The field Soluongban must be a number." id="Soluongban" name="Soluongban" type="number" value="@Model.Soluongban">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.solanxem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-number="The field solanxem must be a number." id="solanxem" name="solanxem" type="number" value="@Model.solanxem">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.moi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-number="The field moi must be a number." id="moi" name="moi" type="number" value="@Model.moi">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Admin")
</div>
